include $(SRCROOT)/$(RULESDIR)/cc-gcc64.rul
GCC_OPT64=	-mabi=64

OSDEFS +=	-D__SVR4 -DSVR4

KDEFINES=	-DKERNEL -D_KERNEL

LIB_SOCKET=	
LIB_MATH=	-lm
LIB_KVM=	

#LDOPTS=		$(LIBS_PATH) $(LDPATH) $(RUNPATH:-R%=-Wl,-R%)
